{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "cd /app && php artisan serve --host=0.0.0.0 --port=$PORT --no-reload",
    "healthcheckPath": "/",
    "healthcheckTimeout": 200,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}