APP_NAME=OmniChain
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Database Configuration
DB_CONNECTION=sqlite
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=omnichain
DB_USERNAME=root
DB_PASSWORD=
DB_SOCKET=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# PostgreSQL Configuration (for production)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=omnichain
# DB_USERNAME=omnichain_user
# DB_PASSWORD=your_secure_password
# DB_CHARSET=utf8
# DB_PREFIX=
# DB_SCHEMA=public
# DB_SSLMODE=prefer

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_CLUSTER=redis
REDIS_PREFIX=omnichain-database-
REDIS_PERSISTENT=false
REDIS_HOST=127.0.0.1
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_MAX_RETRIES=3
REDIS_BACKOFF_ALGORITHM=decorrelated_jitter
REDIS_BACKOFF_BASE=100
REDIS_BACKOFF_CAP=1000

# External API Keys (Required for Weather & Route Intelligence)
OPENROUTE_API_KEY=your_openroute_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=omnichain-cache

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Security Configuration
BCRYPT_ROUNDS=12
HASH_VERIFY=false

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Broadcasting Configuration
BROADCAST_CONNECTION=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Horizon Configuration
HORIZON_BALANCE=auto
HORIZON_MAX_PROCESSES=1
HORIZON_TRIES=3
HORIZON_TIMEOUT=60
HORIZON_MEMORY=128
HORIZON_SLEEP=3
HORIZON_MAX_TIME=0
HORIZON_FORCE=false
HORIZON_NICE=0
HORIZON_BALANCE_MAX_SHIFT=1
HORIZON_BALANCE_COOLDOWN=3
HORIZON_BALANCE_MAX_PROCESSES=1
HORIZON_BALANCE_MIN_PROCESSES=1

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,127.0.0.1:8000,::1
SANCTUM_GUARD=web

# Telescope Configuration
TELESCOPE_ENABLED=true
TELESCOPE_PATH=telescope

# Pulse Configuration
PULSE_ENABLED=true
PULSE_INGEST_DRIVER=redis
PULSE_INGEST_CONNECTION=default
PULSE_INGEST_CHANNEL=laravel_pulse
PULSE_INGEST_BATCH_SIZE=100
PULSE_INGEST_BATCH_TIMEOUT=5
PULSE_INGEST_BATCH_MEMORY=50
PULSE_INGEST_BATCH_SLEEP=0.1
PULSE_INGEST_BATCH_MAX_EXECUTION_TIME=60
PULSE_INGEST_BATCH_MAX_MEMORY=128
PULSE_INGEST_BATCH_MAX_SLEEP=1

# Nightwatch Configuration
NIGHTWATCH_ENABLED=false
NIGHTWATCH_DRIVER=redis
NIGHTWATCH_CONNECTION=default
NIGHTWATCH_CHANNEL=laravel_nightwatch
NIGHTWATCH_BATCH_SIZE=100
NIGHTWATCH_BATCH_TIMEOUT=5
NIGHTWATCH_BATCH_MEMORY=50
NIGHTWATCH_BATCH_SLEEP=0.1
NIGHTWATCH_BATCH_MAX_EXECUTION_TIME=60
NIGHTWATCH_BATCH_MAX_MEMORY=128
NIGHTWATCH_BATCH_MAX_SLEEP=1

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Database Foreign Keys
DB_FOREIGN_KEYS=true

# MySQL SSL Configuration
MYSQL_ATTR_SSL_CA=

# Database URL (for cloud databases)
DB_URL=

# Redis URL (for cloud Redis)
REDIS_URL=

# External API Configuration
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRY_ATTEMPTS=3
EXTERNAL_API_RETRY_DELAY=1000

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_HEADERS_CSP_ENABLED=true
SECURITY_HEADERS_HSTS_ENABLED=true
SECURITY_HEADERS_X_FRAME_OPTIONS=DENY
SECURITY_HEADERS_X_CONTENT_TYPE_OPTIONS=nosniff
SECURITY_HEADERS_REFERRER_POLICY=strict-origin-when-cross-origin

# File Upload Configuration
FILE_UPLOAD_MAX_SIZE=10240
FILE_UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
FILE_UPLOAD_PATH=uploads

# Image Processing Configuration
IMAGE_PROCESSING_DRIVER=gd
IMAGE_PROCESSING_QUALITY=85
IMAGE_PROCESSING_MAX_WIDTH=1920
IMAGE_PROCESSING_MAX_HEIGHT=1080

# Notification Configuration
NOTIFICATION_DRIVER=database
NOTIFICATION_QUEUE=notifications
NOTIFICATION_RETRY_AFTER=90
NOTIFICATION_MAX_TRIES=3

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_DRIVER=pusher
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=6001
WEBSOCKET_SCHEME=http
WEBSOCKET_APP_ID=omnichain
WEBSOCKET_APP_KEY=omnichain_key
WEBSOCKET_APP_SECRET=omnichain_secret
WEBSOCKET_APP_CLUSTER=mt1

# Geospatial Configuration
GEOSPATIAL_DRIVER=postgis
GEOSPATIAL_SRID=4326
GEOSPATIAL_BUFFER_DISTANCE=1000

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_DRIVER=database
ANALYTICS_RETENTION_DAYS=365
ANALYTICS_BATCH_SIZE=1000

# Audit Logging Configuration
AUDIT_LOG_ENABLED=true
AUDIT_LOG_DRIVER=database
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_BATCH_SIZE=100

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_MONITORING_DRIVER=redis
PERFORMANCE_MONITORING_SLOW_QUERY_THRESHOLD=1000
PERFORMANCE_MONITORING_MEMORY_THRESHOLD=128

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DRIVER=local
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_MEMORY_THRESHOLD=128
HEALTH_CHECK_DISK_THRESHOLD=90
